.page_content {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.page_content .bg {
  position: absolute;
  top: 0;
}
.page_content .page_text {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}
.page_content .page_text_highlight {
  color: var(--text-color);
}
