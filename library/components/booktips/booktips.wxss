.book-tips .star {
  width: 40rpx!important;
  height: 40rpx!important;
  margin-right: 8rpx;
  animation:showStar 1.8s infinite linear;
}
@keyframes showStar {
  0% {
    transform: rotateZ(0deg);
  }
  50% {
    transform: rotateZ(45deg);
  }
  100% {
    transform: rotate(0deg);
  }
}
.book-tips text {
  margin-right: 50rpx;
}