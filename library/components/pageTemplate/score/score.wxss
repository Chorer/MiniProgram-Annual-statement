.courseShell {
  position: relative;
  width: 100%;
  height: 100%;
}
.bg {
  position: absolute;
  z-index: -1;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
}
.courseShell .part-one {
  position: absolute;
  top:120rpx;
  width: 100%;
  height: 600rpx;
  text-align: center;
  /* background-color: aqua; */
}
.courseShell .title {
  margin-bottom: 10rpx;
  line-height: 35rpx;
}
.courseShell .title:nth-of-type(2) {
  margin-bottom: 70rpx;
}
.courseShell .course {
  line-height: 45rpx;
  margin-bottom: 20rpx;
}
.courseShell .courseDetail {
  font-size: 25rpx;
  color:var(--text-color);
  margin:0 20rpx;
}

.courseShell .part-two {
  position: absolute;
  top:80rpx;
  width: 100%;
  height: 400rpx;
  margin-left: 30rpx;
  /* background-color: aqua; */
}
.courseShell  .word {
  display: block;
}
.courseShell  .changeWord {
  color: var(--text-color);
  margin: 0 10rpx;
}
.courseShell  .changeWordStyle {
  margin-left: 0;
}
.courseShell .changeColor {
  color: var(--text-color);
}
.courseShell  .part-three {
  position: absolute;
  top: 500rpx;
  width: 100%;
  height: 300rpx;
  text-align: end;
}
.courseShell  .wordStyle {
  padding-right: 40rpx;
  /* color:var(--base-color); */
}
.courseShell .coursePoint,
.courseShell .score {
  opacity: 0;
}
.courseShell .part-one .coursePoint:nth-of-type(1) {
  animation-delay: .8s;
}
.courseShell .part-one .coursePoint:nth-of-type(2) {
  animation-delay: .8s;
}
.courseShell .part-one view.coursePoint:nth-of-type(1) {
  animation-delay: 1.6s;
}
.courseShell .part-one view.coursePoint:nth-of-type(2) {
  animation-delay: 2.6s;
}
.courseShell .part-one view.coursePoint:nth-of-type(3) {
  animation-delay: 3.6s;
}
.courseShell .part-two .score:nth-of-type(1){
  animation-delay: .8s;
}
.courseShell .part-two text.score:nth-of-type(1),
.courseShell .part-two text.score:nth-of-type(2),
.courseShell .part-two text.score:nth-of-type(3){
  animation-delay: 1.6s;
}
.courseShell .part-three .score:nth-of-type(1){
  animation-delay: 2.4s;
}
.courseShell .part-three text.score:nth-of-type(1){
  animation-delay: 3.2s;
}