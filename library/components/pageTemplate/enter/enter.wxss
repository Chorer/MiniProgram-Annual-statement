.enterShell {
  position: relative;
  width: 100%;
  height: 100%;
}
.container-bg {
  position: absolute;
  z-index: -1;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
}
.enterShell .part-one {
  position: absolute;
  top:60rpx;
  width: 100%;
  height: 300rpx;
  padding-left: 30rpx;
  /* background-color: aqua; */
}
.enterShell .word {
  display: block;
  opacity: 0;
}
.enterShell .changeWord {
  color: var(--text-color);
  margin: 0 10rpx;
}
.enterShell .changeWordStyle {
  margin-left: 0;
}
.enterShell  .part-two {
  position: absolute;
  top:400rpx;
  width: 100%;
  height: 300rpx;
  text-align: end;
}
.enterShell  .wordStyle {
  padding-right: 40rpx;
  color: var(--text-color);
}

.enterShell  .part-three {
  text-align: center;
  padding-left: 0;
}

.enterShell  .part-four {
  position: absolute;
  top:60rpx;
  width: 100%;
  height: 400rpx;
  text-align: center;
  /* background-color: aqua; */
}
.enterShell  .part-four .enterTime {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
.enterShell  .part-four .enterTime:first-of-type {
  margin-top: 40rpx;
}
.enterShell  .part-four .enterTime text {
  padding: 0 15rpx;
}
.enterShell  .part-four .enterTime .iconfont {
  font-size: 45rpx;
  color: rgba(255,255,255,.8);
}
.enterShell  .part-four .enterTime .enterNum {
  font-size: 28rpx;
  /* color:#b1dcdc; */
  color: rgba(255,255,255,.8);
  opacity: 0;
  animation-delay: 4s;
}
.enterShell  .part-four .enterTime view {
  height:55rpx;
  background-color: transparent;
}
.enterShell .part-four .enterTime .enterRect {
  background-color: rgba(255,255,255,.8);
  width: 0;
  animation: showWidth 2.4s linear 1;
  animation-fill-mode: forwards;
  animation-delay: 1.6s;
}
@keyframes showWidth {
  0% {
    width:0;
  }
  100% {
    width:100%;
  }
}
.enterShell  .part-five {
  position: absolute;
  top:500rpx;
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  line-height: 50rpx;
  opacity: 0;
  /* background-color: aqua; */
}
.enterShell  .part-five text:nth-of-type(1){
  width: 60rpx;
  height:140rpx;
  color: #fff;
  font-size: 30rpx;
  /* background-color: aqua; */
}
.enterShell  .part-five text:nth-of-type(2){
  width: 400rpx;
  height:140rpx;
  font-size: 34rpx;
  color: var(--text-color);
  /* background-color: bisque; */
}
.enterShell  .part-five text:nth-of-type(3){
  width: 50rpx;
  height:155rpx;
  display: flex;
  align-items: flex-end;
  /* background-color: cornflowerblue; */
}

.enterShell  .part-five text:nth-of-type(3) {
  width: 60rpx;
  height:160rpx;
  font-size: 26rpx;
  color: #fff;
  font-size: 27rpx;
}

.enterShell .part-one .word:nth-of-type(1) {
  animation-delay: .8s;
}
.enterShell .part-one .word:nth-of-type(2) {
  animation-delay: 1.6s;
}
.enterShell .part-one .word:nth-of-type(3) {
  animation-delay: 2.4s;
}
.enterShell .part-two .word:nth-of-type(1) {
  animation-delay: 3.2s;
}
.enterShell .part-one-extra text.word:nth-of-type(1) {
  animation-delay: 1.6s;
}
.enterShell .part-six .word:nth-of-type(1) {
  animation-delay: .8s;
}
.enterShell .part-six .word:nth-of-type(2) {
  animation-delay: 1.6s;
}
.enterShell .part-six view.word:nth-of-type(1) {
  animation-delay: 1.6s;
}
.enterShell .part-six-extra .word:nth-of-type(1),
.enterShell .part-six-extra .word:nth-of-type(2) {
  animation-delay: 2.4s;
}
.enterShell .part-seven .word:nth-of-type(1) {
  animation-delay: .8s;
}
.enterShell .part-seven .word:nth-of-type(2) {
  animation-delay: 1.6s;
}
.enterShell .part-seven-extra .word:nth-of-type(1) {
  animation-delay: 2.4s;
}
.enterShell .part-seven-extra .word:nth-of-type(2) {
  animation-delay: 2.4s;
}
.enterShell .part-four .word:nth-of-type(1) {
  animation-delay: .8s;
}
.enterShell .part-five {
  animation-delay: 4.8s;
}

