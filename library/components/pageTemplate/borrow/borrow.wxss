@import '../../../styles/page.wxss';
.bg {
  position: absolute;
  z-index: -1;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
}
.page_content .page_text1 {
  box-sizing: border-box;
  padding: 0 30rpx;
  line-height: 60rpx;
  flex: 1;
}
.page_content .page_text2 {
  margin-bottom: -80rpx;
}
.page_content .page_text3 {
  /* flex:2; */
  flex: 1;
}
.page_content .page_text4 {
  /* flex: 3; */
  flex: 1;
  justify-content: flex-start;
}

.page_content .page_line {
  opacity: 0;
}
.page_content .page_text1 .page_line:nth-of-type(1){
  animation-delay: .8s;
}
.page_content .page_text1 .page_line:nth-of-type(2){
  animation-delay: 1.6s;
}
.page_content .page_text2 .page_line:nth-of-type(1){
  animation-delay: 2.4s;
}


.page_content .page_text3 .page_line:nth-of-type(1){
  animation-delay: .8s;
}
.page_content .page_text3 .page_line:nth-of-type(2){
  animation-delay: .8s;
}
.page_content .page_text3 .page_line:nth-of-type(3){
  animation-delay: 1.6s;
}
.page_content .page_text4 .page_line:nth-of-type(1){
  animation-delay: 2.4s;
}
.page_content .page_text4 .page_line:nth-of-type(2){
  animation-delay: 3.2s;
}
.page_content .page_wordcloud {  
  height: calc(100vw - 200rpx);
  margin-bottom: 50rpx;
}
.page_content .page_wordcloud image {
  transform: scale(0);
  width: 85%;
  height: 85%;
  margin: 0 auto;
  display: block;
}
.page_content .page_wordcloud .img_active {
  animation: scale 1.2s linear;
  animation-fill-mode: forwards;
  animation-delay: 3.2s;
}
@keyframes scale {
  0% {
    transform: scale(0);
  }
  100% {
    transform: scale(1);
  }
}