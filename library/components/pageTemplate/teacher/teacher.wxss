.teacherShell {
  position: relative;
  width: 100%;
  height: 100%;
}
.bg {
  position: absolute;
  z-index: -1;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
}
.teacherShell .part-one {
  position: absolute;
  top:90rpx;
  width: 100%;
  height: 300rpx;
  margin-left: 30rpx;
  /* background-color: aqua; */
}

.teacherShell .word {
  display: block;
  opacity: 0;
}
.teacherShell  .changeWord {
  color: var(--text-color);
  margin: 0 10rpx;
}
.teacherShell .part-two {
  position: absolute;
  top: 520rpx;
  height: 300rpx;
  width: 100%;
  text-align: end;
  /* color: var(--text-color); */
  padding-right: 40rpx;
  line-height: 70rpx;
  box-sizing: border-box;
}
.teacherShell .part-five {
  top:100rpx;
}
.teacherShell .wordStyle {
  padding-right: 40rpx;
  color:var(--text-color);
}
.teacherShell .word-style {
  color: var(--text-color);
}
.teacherShell .part-four {
  top: 480rpx;
  color:var(--text-color);
}


.teacherShell .part-one .course:nth-of-type(1) {
  animation-delay: .8s;
}
.teacherShell .part-one .course:nth-of-type(2) {
  animation-delay: 1.6s;
}
.teacherShell .part-one .course:nth-of-type(3) {
  animation-delay: 2.4s;
}
.teacherShell .part-four .course:nth-of-type(1),
.teacherShell .part-four .course:nth-of-type(2) {
  animation-delay: 3.2s;
}
.teacherShell .paper:nth-of-type(1) {
  animation-delay: .8s;
}
.teacherShell .paper:nth-of-type(2) {
  animation-delay: 1.6s;
}
